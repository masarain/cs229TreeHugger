import os
import cv2
import numpy as np

def getRGBRatio(filename):
      img = cv2.imread(filename) # BGR
      rows,cols, channels = img.shape
      R = img[:,:,2]
      G = img[:,:,1]
      B = img[:,:,0]
      meanR = np.mean(R[:,:])
      meanG = np.mean(G[:,:])
      meanB = np.mean(B[:,:])
      return meanG/meanR, meanG/meanB
